@using Easyman.Common.Mvc.Controls
@model Easyman.Dto.ComputerShareFolderModel
@{
    Layout = "~/Views/Shared/_CommonEdite.cshtml";
}
@section Styles{
    <style>
        #iconMenuDiv {
            width: 400px;
        }

            #iconMenuDiv span {
                padding: 5px;
                margin: 5px 10px;
                font-size: 22px;
                cursor: pointer;
                display: inline-block;
                border: 1px solid transparent;
            }

                #iconMenuDiv span:hover {
                    transform: scale(1.02);
                    border: 1px solid #ccc;
                    border-radius: 4px;
                }

            #iconMenuDiv h5 {
                margin-left: 10px;
                padding-bottom: 4px;
                border-bottom: solid 1px #707070;
            }

        .form-group {
            margin-bottom: 20px;
        }
    </style>
}

@Html.HiddenFor(h => h.Id)
<div class="tab-content" style="padding-top:12px;">
    <div role="tabpanel" class="tab-pane active" id="navMenu" style="margin-bottom:50px">
      <div class="form-group">
            <label for="ComputerId" class="col-xs-4 control-label" style="text-align:right">所属终端</label>
            <div class="col-xs-6">
                @Html.DropDownListFor(p => p.ComputerId, Model.ComputerList as List<SelectListItem>,
             new { @class = "form-control", @Required = "Required", @oninvalid = "setCustomValidity('请选择所属终端')", @oninput = "setCustomValidity('')" })<i class="iRequired">*</i>
            </div>
        </div>
        <div class="form-group">
            <label for="Name" class="col-xs-4 control-label" style="text-align:right">共享路径</label>
            <div class="col-xs-6">
                @Html.TextBoxFor(f => f.Name, new { @class = "form-control", placeholder = "共享路径", @Required = "Required", @oninvalid = "setCustomValidity('请输入共享路径')", @oninput = "setCustomValidity('')" })<i class="iRequired">*</i>
            </div>
        </div>
        <div class="form-group">
            <label for="PowerMsg" class="col-xs-4 control-label" style="text-align:right">权限信息</label>
            <div class="col-xs-6">
                @Html.TextBoxFor(f => f.PowerMsg, new { @class = "form-control", placeholder = "权限信息", @Required = "Required", @oninvalid = "setCustomValidity('请输入权限信息')", @oninput = "setCustomValidity('')" })<i class="iRequired">*</i>
            </div>
        </div>
        <div class="form-group">
            <label for="Remark" class="col-xs-4 control-label" style="text-align:right">描述说明</label>
            <div class="col-xs-6">
                @Html.TextAreaFor(f => f.Remark, new { @class = "form-control", placeholder = "描述说明" })
            </div>
        </div>
    </div>
</div>

@section scripts{
    @*放页面自定义js*@
    <script type="text/javascript">
    //母版页调用提交方法
    function SubmitForm() {
        //from表单提交路径
        var postUrl = "../api/services/api/ComputerShareFolder/InsertOrUpdateComputerShareFolde";
        //提交方法-JS里面
        handleSubmitForm(postUrl);
    }
    </script>
}