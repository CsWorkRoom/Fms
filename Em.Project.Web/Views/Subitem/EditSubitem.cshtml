@using Easyman.Common.Mvc.Controls
@model Easyman.Dto.SubitemModel
@{
    Layout = "~/Views/Shared/_CommonEdite.cshtml";
}
@section Styles{
}
    @Html.HiddenFor(h => h.Id)

        <div class="tab-content" style="padding-top:12px;">
            <div role="tabpanel" class="tab-pane active" id="navMenu" style="margin-bottom:50px">
                <div class="form-group">
                    <label for="SubitemTypeId" class="col-xs-4 control-label" style="text-align:right">打分类型</label>
                    <div class="col-xs-6">
                        @Html.DropDownListFor(p => p.SubitemTypeId, Model.SubitemTypeList==null?new List<SelectListItem> { new SelectListItem { Text="无选项",Value=""} } : (Model.SubitemTypeList as List<SelectListItem>),
                        new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-xs-4 control-label" style="text-align:right">打分项</label>
                    <div class="col-xs-6">
                        @Html.TextBoxFor(f => f.Name, new { @class = "form-control", placeholder = "打分项", @Required = "Required", @oninvalid = "setCustomValidity('请输入打分项')", @oninput = "setCustomValidity('')" })<i class="iRequired">*</i>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Weight" class="col-xs-4 control-label" style="text-align:right">权重分</label>
                    <div class="col-xs-6">
                        @Html.TextBoxFor(f => f.Weight, new { @class = "form-control", placeholder = "权重分", @Required = "Required", @oninvalid = "setCustomValidity('请输入权重分')", @oninput = "setCustomValidity('')" })<i class="iRequired">*</i>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Remark" class="col-xs-4 control-label" style="text-align:right">描述说明</label>
                    <div class="col-xs-6">
                        @Html.TextAreaFor(f => f.Remark, new { @class = "form-control", placeholder = "描述说明" })
                    </div>
                </div>
            </div>
        </div>


@section scripts{
   @*放页面自定义js*@
<script type="text/javascript">
    //母版页调用提交方法
    function SubmitForm() {
        //from表单提交路径
        var postUrl = "../api/services/api/Subitem/InsertOrUpdateSubitem";
        //提交方法-JS里面
        handleSubmitForm(postUrl);
    }
</script>
}