@using System.Web.Optimization
@{
    //Layout = "~/Views/Shared/_Master.cshtml";
    Layout = null;
    ViewBag.Title = "修改密码";
}
<!DOCTYPE html>

<html >
<head>
    <meta charset="utf-8">
    <title>修改密码</title>

    @Styles.Render("~/Bundles/bootstrap/css")
    @Styles.Render("~/Bundles/common/css")
    @Styles.Render("~/Bundles/alert/css")
    @Styles.Render("~/Bundles/iconfont/css")
</head>

<body oncontextmenu="return false" style="padding:15px">

    <form class="form-horizontal" method="post" id="modifyPwdForm">

        <div class="form-group marb20">
            <label class="col-xs-3 col-sm-3 control-label" style="margin-top: 10px;padding-right: 8px;padding-left: 8px;">旧密码</label>
            <div class="col-xs-9 col-sm-9">
                <input type="password" name="OldPassword" required="Required" class="form-control" id="oldPassword" placeholder="请输入原密码" autocomplete="off" oncontextmenu="return false" onpaste="return false" />
            </div>
        </div>

        <div class="form-group marb20">
            <label class="col-xs-3 col-sm-3 control-label" style="margin-top: 10px;padding-right: 8px;padding-left: 8px;">新密码</label>
            <div class="col-xs-9 col-sm-9">
                <input type="password" name="NewPassword" required="Required" class="form-control" id="newPassword" placeholder="请输入新密码" autocomplete="off" oncontextmenu="return false" onpaste="return false" />
            </div>
        </div>

        <div class="form-group marb20">
            <label class="col-xs-3 col-sm-3 control-label" style="margin-top: 10px;padding-right: 8px;padding-left: 8px;">确认密码</label>
            <div class="col-xs-9 col-sm-9">
                <input type="password" name="ConfirmPassword" required="Required" class="form-control" id="confirmPassword" placeholder="请确认密码" autocomplete="off" oncontextmenu="return false" onpaste="return false" />
            </div>
        </div>

        <input name="action" value="login" type="hidden">
        <input id="TenancyName" name="TenancyName" type="hidden" value="监控平台">
        <input id="userId" name="UserId" type="hidden" value="@ViewData["UserId"]">
        <div style="color:red;height:12px" id="error-message"></div>
        <div style="text-align:right;width:100%">
            <button type='button' class='btn btn-danger' onclick="ColseModel()" data-dismiss='modal'><i class='fa fa-times'></i> 关闭</button> &nbsp;
            <input class="btn btn-success" id="sumbit-btn" type="button" value="保存">
        </div>
    </form>

    <!-- Javascript -->
    @*<script src="~/Scripts/jquery-2.2.4.js"></script>
    <script src="~/Scripts/jquery.form.min.js"></script>*@
    @*<script src="~/Views/Account/js/aes.js"></script>*@
    

    @Scripts.Render("~/Bundles/jquery/js")
    @Scripts.Render("~/Bundles/bootstrap/js")
    @Scripts.Render("~/Bundles/alert/js")
    @Scripts.Render("~/Bundles/abp/js")
    @Scripts.Render("~/Bundles/common/js")
<script src="~/Views/Account/js/modifyPwd.js"></script>
</body>

</html>
