        top: 60px;
    }

    .spName {
        color: #2F4050;
        font-weight: bold;
        margin: 5px;
    }

    .spReadNum {
        color: #ff0000;
        margin: 2px;
    }

    li {
        list-style-type: none;
        margin-left: -15px;
    }

    h4, .h4, h5, .h5, h6, .h6 {
        margin-top: 5px;
        margin-bottom: 0px;
    }

    .fileMime {
        color: red;
