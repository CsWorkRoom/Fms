@model Easyman.Dto.PreDataTypeInput
@{
    Layout = "~/Views/Shared/_CommonEdite.cshtml";
}
@section Styles{
    @*放页面自定义样式*@
}
    @Html.HiddenFor(m => m.Id)

        <div class="tab-content" style="padding-top:12px;">
            <div role="tabpanel" class="tab-pane active" id="navMenu" style="margin-bottom:50px">
                <div class="form-group">
                    <label for="Name" class="col-xs-4 control-label">类型名称(描述)</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "类型名称(描述)", @Required = "Required" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="DataType" class="col-xs-4 control-label">类型定义</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(m => m.DataType, new { @class = "form-control", placeholder = "类型定义", @Required = "Required" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="DataType" class="col-xs-4 control-label">备注</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(m => m.Remark, new { @class = "form-control", placeholder = "备注", @Required = "Required" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="DatabaseType" class="col-xs-4 control-label">数据库类型</label>
                    <div class="col-sm-6">
                        @Html.DropDownListFor(m => m.DbTypeId, ViewBag.DbType as List<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>

 

@section scripts{
   @*放页面自定义js*@
<script type="text/javascript">
    //母版页调用提交方法
    function SubmitForm() {
        //from表单提交路径
        var postUrl = "../api/services/api/PreDataType/AddOrUpdate";
        //提交方法-JS里面
        handleSubmitForm(postUrl);
    }
</script>
}