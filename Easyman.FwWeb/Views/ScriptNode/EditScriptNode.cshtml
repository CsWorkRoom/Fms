@using Easyman.Common.Mvc.Controls
@model Easyman.Dto.ScriptNodeInput
@{
    Layout = "~/Views/Shared/_Master.cshtml";
}

@section Styles{
    <style>
    </style>
}

<form style="width:100%;padding: 0px 15px 0px 15px;" id="saveForm" class="form-horizontal" action="../api/services/api/ScriptNode/InsertOrUpdateScriptNode" method="post" role="form">
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.TaskSpecific)
    <div class="form-body jarviswidget ">

        <div class="tab-content" style="padding-top:12px;">
            <div role="tabpanel" class="tab-pane active" id="navMenu" style="margin-bottom:50px">
                <div class="form-group" id="IsShow">
                    <label for="IsUpdateExample" class="col-sm-4 control-label">是否修改节点实例</label>
                    <div class="col-sm-6">
                        @Html.DropDownListFor(m => m.IsUpdateExample, new List<SelectListItem>() {
                       new SelectListItem{ Text ="是", Value="1", Selected = true },
                       new SelectListItem{ Text ="否", Value="2" }
                   }, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">节点名</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "节点名称", @Required = "Required" })
                    </div>
                </div>
                @*<div class="form-group">
                        <label for="Code" class="col-sm-4 control-label">节点代码</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.Code, new { @class = "form-control", placeholder = "节点代码", @Required = "Required" })
                        </div>
                    </div>*@
                <div class="form-group">
                    <label for="ScriptNodeTypeId" class="col-sm-4 control-label">节点类型</label>
                    <div class="col-sm-6">
                        @Html.DropDownTreeFor(d => d.ScriptNodeTypeId, "../api/services/api/ScriptNodeType/GetScriptNodeTypeTreeJson")
                    </div>
                </div>
                <div class="form-group">
                    <label for="DbServerId" class="col-sm-4 control-label">启动数据库</label>
                    <div class="col-sm-6">
                        @Html.DropDownTreeFor(d => d.DbServerId, "../api/services/api/DbServer/GetDbServerTreeJson")
                    </div>
                </div>
                <div class="form-group">
                    <label for="ScriptModel" class="col-sm-4 control-label">任务类型</label>
                    <div class="col-sm-6">
                        @Html.RadioButtonFor(p => p.ScriptModel, 2, new { @checked = "checked" }) 命令段
                        @Html.RadioButtonFor(p => p.ScriptModel, 1) 建表
                    </div>
                </div>
                <div id="tbGroup">
                    <div class="form-group">
                        <label for="EnglishTabelName" class="col-sm-4 control-label">表英文名</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.EnglishTabelName, new { @class = "form-control", placeholder = "表英文名", @Required = "Required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="ChineseTabelName" class="col-sm-4 control-label">表别名</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.ChineseTabelName, new { @class = "form-control", placeholder = "表中文名", @Required = "Required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="TableType" class="col-sm-4 control-label">表类型</label>
                        <div class="col-sm-6">
                            @Html.RadioButtonFor(p => p.TableType, 1, new { @checked = "checked" }) 公用表
                            @Html.RadioButtonFor(p => p.TableType, 0) 私有表
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="TableModel" class="col-sm-4 control-label">建表模式</label>
                        <div class="col-sm-6">
                            @Html.RadioButtonFor(p => p.TableModel, 1, new { @checked = "checked" }) 新建
                            @Html.RadioButtonFor(p => p.TableModel, 2) 复制
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Content" class="col-sm-4 control-label">脚本内容</label>
                    <div class="col-sm-6">
                        @Html.TextAreaFor(m => m.Content, new
                   {
                       @class = "form-control",
                       placeholder =
                       @"建表命令：请以@{你的英文表名}替换表名。格式如下：
---复制创建---
CREATE TABLE @{ 你新建的英文表名} AS SELECT *FROM TB1
---新建---
CREATE TABLE @{ 你新建的英文表名}
(
  ID NUMBER(18) NOT NULL,
  NAME VARCHAR(50),
  REMARK VARCHAR(200),
  CONSTRAINT PK_EM_SCRIPT_NODE_TYPE PRIMARY KEY(ID)
); ",
                       @style = "height:200px"
                   })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Remark" class="col-sm-4 control-label">备注</label>
                    <div class="col-sm-6">
                        @Html.TextAreaFor(m => m.Remark, new { @class = "form-control", placeholder = "节点说明" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-actions text-right">
        <div class="row bottomPage">
            <div class="col-md-12">
                <button type='button' class='btn btn-danger' onclick="ColseModel()" data-dismiss='modal'><i class='fa fa-times'></i> 关闭</button> &nbsp;
                <button class="btn btn-primary" id="sumbit-btn" type="button" onclick="handleSubmitForm()"><i class="fa fa-save"></i> 提交</button>
            </div>
        </div>
    </div>
</form>

@section scripts{
    @*<script src="@Url.Content("/Scripts/bootstrap-typeahead.js")" type="text/javascript"></script>*@
    <script src="~/Views/ScriptNode/js/EditScriptNode.js"></script>
    <script type="text/javascript">
    $(function () {
        var node_id = $("#Id").val();
        if (node_id == 0 || node_id=="")
        {
            $("#IsShow").hide();
        }
    });
    </script>
}
