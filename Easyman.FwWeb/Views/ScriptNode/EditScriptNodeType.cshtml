@using Easyman.Common.Mvc.Controls
@model Easyman.Dto.ScriptNodeTypeInput
@{
    Layout = "~/Views/Shared/_Master.cshtml";
}

@section Styles{
    <style>
    </style>
}

<form style="width:100%;padding: 0px 15px 0px 15px;" id="saveForm" class="form-horizontal" action="../api/services/api/ScriptNodeType/InsertOrUpdateScriptNodeType" method="post" role="form">
    @Html.HiddenFor(m => m.Id)
    <div class="form-body jarviswidget ">
        <div class="tab-content" style="padding-top:12px;">
            <div role="tabpanel" class="tab-pane active" id="navMenu" style="margin-bottom:50px">
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">NodeTypeName</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "NodeTypeName", @Required = "Required", @oninvalid = "setCustomValidity('Please enter the name of the node type')", @oninput = "setCustomValidity('')" })<i class="iRequired">*</i>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Remark" class="col-sm-4 control-label">Remark</label>
                    <div class="col-sm-6">
                        @Html.TextAreaFor(m => m.Remark, new { @class = "form-control", placeholder = "Remark" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-actions">
        <div class="row bottomPage">
            <div class="col-md-12 right">
                <button type='button' class='btn btn-danger' onclick="ColseModel()" data-dismiss='modal'><i class='fa fa-times'></i> Close</button> &nbsp;
                <button class="btn btn-primary" id="sumbit-btn" type="submit"><i class="fa fa-save"></i> Submit</button>
            </div>
        </div>
    </div>
</form>

@section scripts{
    <script src="~/Views/ScriptNode/js/EditScriptNodeType.js"></script>
}